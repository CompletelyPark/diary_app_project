<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="#1ECE62D2"
    android:id="@+id/navigation_menu"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="20dp"
        android:orientation="vertical"
        >
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingTop="15dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <Button
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:id="@+id/btn_theme1"
                android:layout_width="22dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                />
            <Button
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"

                android:id="@+id/btn_theme2"
                android:layout_width="22dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                />
            <Button
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"

                android:id="@+id/btn_theme3"
                android:layout_width="22dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                />
            <Button
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"

                android:id="@+id/btn_theme4"
                android:layout_width="22dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                />
            <Button
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"

                android:id="@+id/btn_theme5"
                android:layout_width="22dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                />
            <Button
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:onClick="oncl"
                android:id="@+id/btn_theme_dark"
                android:layout_width="22dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:gravity="start"
                android:paddingStart="3dp"
                >

                <SeekBar
                    android:id="@+id/seekBarBright"
                    android:layout_width="243dp"
                    android:layout_height="40dp"
                    android:max="100"
                    android:progress="10"

                    android:progressDrawable="@drawable/seek_bar_custom"
                    android:thumb="@drawable/seek_thumb_custom" />

                <TextView
                    android:id="@+id/textBright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="9dp"
                    android:text="value"
                    android:textStyle="bold" />
            </FrameLayout>

            <Button
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:id="@+id/btn_auto_bright"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"/>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="5dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:paddingStart="3dp"
                android:text="@string/Setting"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_explain"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:paddingStart="15dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_set_font_dialog"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:drawableLeft="@android:drawable/btn_dialog"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:onClick="onClickDialog"
                android:paddingStart="8dp"
                android:text="show dialog" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_weight="1"
            >

            <SeekBar
                android:id="@+id/seekBarBrightness"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/seek_bar_custom"
                android:thumb="@drawable/seek_thumb_custom"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="13dp"
                android:text="@string/TextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="13dp"
                android:text="value"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp">

            <SeekBar
                android:id="@+id/seekBar_line_space_Extra"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/seek_bar_custom"
                android:thumb="@drawable/seek_thumb_custom"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="13dp"
                android:text="@string/LineSpace"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_line_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="13dp"
                android:text="value"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp">

            <SeekBar
                android:id="@+id/seekBar_UpDown_Padding"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/seek_bar_custom"
                android:thumb="@drawable/seek_thumb_custom"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="13dp"
                android:text="@string/UpDownPadding"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SpaceUpDownPadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="13dp"
                android:text="value"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp">

            <SeekBar
                android:id="@+id/seekBar_LeftRight_Padding"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/seek_bar_custom"
                android:thumb="@drawable/seek_thumb_custom"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="13dp"
                android:text="@string/LeftRightPadding"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/LeftRight_Padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="13dp"
                android:text="value"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"/>


</LinearLayout>