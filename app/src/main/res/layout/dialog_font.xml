<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:overScrollMode="ifContentScrolls">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/font1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="24sp"
                android:padding="10dp"
                android:textColor="?attr/colorPrimary"
                android:text="서체1"/>

            <TextView
                android:id="@+id/font2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="24sp"
                android:padding= "10dp"
                android:fontFamily="@font/font_bazzi"
                android:textColor="?attr/colorPrimary"
                android:text="서체 2"/>

            <TextView
                android:id="@+id/font3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="24sp"
                android:padding="10dp"
                android:fontFamily="@font/font_dnfforgedblade_light"
                android:textColor="?attr/colorPrimary"
                android:text="서체 3"/>

            <TextView
                android:id="@+id/font4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="24sp"
                android:fontFamily="@font/font_mabinogi_classic"
                android:textColor="?attr/colorPrimary"
                android:padding= "10dp"
                android:text="서체 4"/>

            <TextView
                android:id="@+id/font5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="24sp"
                android:padding= "10dp"
                android:fontFamily="@font/font_maplestory_light"
                android:textColor="?attr/colorPrimary"
                android:text="서체 5"/>

            <TextView
                android:id="@+id/font6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="24sp"
                android:padding= "10dp"
                android:fontFamily="@font/font_nexon_kart"
                android:textColor="?attr/colorPrimary"
                android:text="서체 6"/>

            <TextView
                android:id="@+id/font7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="24sp"
                android:padding= "10dp"
                android:fontFamily="@font/font_nexon_lv2"
                android:textColor="?attr/colorPrimary"
                android:text="서체 7"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>